<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AudreySpotifyApp.Views.AboutPage"
             xmlns:vm="clr-namespace:AudreySpotifyApp.ViewModels"
             BackgroundColor="#000525"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <StackLayout Padding="20" HorizontalOptions="Center">
                <Label Text="Bienvenue sur ma première application Xamarin !"
                       VerticalOptions="Start"
                       FontSize="Title"
                       HorizontalTextAlignment="Center"
                       TextColor="White"/>
                <Label Text="Dans cette application, nous allons afficher diverses informations liées à l'API Spotify."
                    VerticalOptions="Start"
                    FontSize="Body"
                    HorizontalTextAlignment="Center"
                    TextColor="White"/>
            </StackLayout>
        </StackLayout>
        <StackLayout Grid.Row="1" Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
            <Button Margin="0,10,0,0" Text="Learn more"
                    Command="{Binding OpenWebCommand}"
                    BackgroundColor="#009519"
                    TextColor="White" />
        </StackLayout>
        
    </Grid>

</ContentPage>
